#!/usr/bin/env ruby

if RUBY_ENGINE == 'opal'
  require 'up/node/cluster_cli'
  Up::CLI.call
else
  require 'up/cli'
  Up::CLI.setup_node
  lib_dir = File.expand_path("#{__dir__}/../lib")
  gems = Up::CLI.get_gems_for_cmd
  Kernel.exec("opal -Rnodejs -E -I. -I#{lib_dir} -g rack #{gems} #{__FILE__} -- #{ARGV.join(' ')}")
end
